	    float aumento=0;
	    
	    
	    if (qtd_falta==0) {
	    	aumento = sal_bruto * (float) 0.02;
	    	System.out.println("ola, " + nome_colab);
	    	System.out.println("Você recebeu aumento por não faltar....: " + aumento);
	    //}else 	
	    
	    	
	    	
	    	//System.out.println("Nome colaborador..: " + nome_colab);
	    	//System.out.println("Salário Bruto.....: " + sal_bruto);
