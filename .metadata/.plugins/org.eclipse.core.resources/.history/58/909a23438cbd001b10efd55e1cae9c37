         /*
		 * Exercicio 3:
		 * Receba o valor do salário bruto, o nome de um colaborador e 
		 * a qtde de faltas.
		 * Se não houver faltas o salario bruto receberá um aumento de 2%.
		 * Calcule o valor do INSS sobre o salário bruto.
		 * Exiba no final o salário bruto, e o salário liquido (retirando
		 * o INSS e 8% do FGTS)
		 * 
		 */




package decisao;

import javax.swing.JOptionPane;

public class Exercicio3 {

	public static void main(String[] args) {

		String nome_colab =JOptionPane.showInputDialog("Digite o nome do colaborador");
	    double sal_bruto = Integer.parseInt(JOptionPane.showInputDialog("Digite o salário bruto:"));
	    double qtd_falta = Double.parseDouble(JOptionPane.showInputDialog("Digite o quantidade de faltas:"));	
	    
	    if (qtd_falta==0) {
	    	System.out.println("Nome colaborador..: " + nome_colab);
	    	System.out.println("Salário Bruto.....: " + sal_bruto);
	    	System.out.println("Salário liquido...: " + sal_bruto);
	    	
	    }
	    
		
		
		
		
		
		
		
		
		
		
		
	}
	
}
